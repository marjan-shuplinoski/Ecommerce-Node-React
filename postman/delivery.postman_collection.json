{
  "info": {"name": "Delivery API", "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"},
  "item": [
    {"name": "Create Delivery","request": {"method": "POST","header": [{"key": "Content-Type", "value": "application/json"},{"key": "Authorization", "value": "Bearer <user_token>"}],"body": {"mode": "raw","raw": "{\n  \"user\": \"<userId>\",\n  \"address\": \"123 Main St\",\n  \"status\": \"Pending\"\n}"},"url": {"raw": "http://localhost:5000/api/deliveries","host": ["http://localhost:5000"],"path": ["api","deliveries"]}}},
    {"name": "Get All Deliveries","request": {"method": "GET","header": [{"key": "Authorization", "value": "Bearer <admin_token>"}],"url": {"raw": "http://localhost:5000/api/deliveries","host": ["http://localhost:5000"],"path": ["api","deliveries"]}}},
    {"name": "Get Delivery By ID","request": {"method": "GET","header": [{"key": "Authorization", "value": "Bearer <user_or_admin_token>"}],"url": {"raw": "http://localhost:5000/api/deliveries/<deliveryId>","host": ["http://localhost:5000"],"path": ["api","deliveries","<deliveryId>"]}}},
    {"name": "Update Delivery","request": {"method": "PUT","header": [{"key": "Content-Type", "value": "application/json"},{"key": "Authorization", "value": "Bearer <admin_token>"}],"body": {"mode": "raw","raw": "{\n  \"status\": \"Delivered\"\n}"},"url": {"raw": "http://localhost:5000/api/deliveries/<deliveryId>","host": ["http://localhost:5000"],"path": ["api","deliveries","<deliveryId>"]}}},
    {"name": "Delete Delivery","request": {"method": "DELETE","header": [{"key": "Authorization", "value": "Bearer <admin_token>"}],"url": {"raw": "http://localhost:5000/api/deliveries/<deliveryId>","host": ["http://localhost:5000"],"path": ["api","deliveries","<deliveryId>"]}}}
  ]
