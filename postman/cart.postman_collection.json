{
  "info": {"name": "Cart API", "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"},
  "item": [
    {"name": "Create Cart","request": {"method": "POST","header": [{"key": "Content-Type", "value": "application/json"},{"key": "Authorization", "value": "Bearer <user_token>"}],"body": {"mode": "raw","raw": "{\n  \"user\": \"<userId>\",\n  \"items\": []\n}"},"url": {"raw": "http://localhost:5000/api/carts","host": ["http://localhost:5000"],"path": ["api","carts"]}}},
    {"name": "Get All Carts","request": {"method": "GET","header": [{"key": "Authorization", "value": "Bearer <admin_token>"}],"url": {"raw": "http://localhost:5000/api/carts","host": ["http://localhost:5000"],"path": ["api","carts"]}}},
    {"name": "Get Cart By ID","request": {"method": "GET","header": [{"key": "Authorization", "value": "Bearer <user_or_admin_token>"}],"url": {"raw": "http://localhost:5000/api/carts/<cartId>","host": ["http://localhost:5000"],"path": ["api","carts","<cartId>"]}}},
    {"name": "Get Cart By User","request": {"method": "GET","header": [{"key": "Authorization", "value": "Bearer <user_or_admin_token>"}],"url": {"raw": "http://localhost:5000/api/carts/user/<userId>","host": ["http://localhost:5000"],"path": ["api","carts","user","<userId>"]}}},
    {"name": "Update Cart","request": {"method": "PUT","header": [{"key": "Content-Type", "value": "application/json"},{"key": "Authorization", "value": "Bearer <user_token>"}],"body": {"mode": "raw","raw": "{\n  \"items\": [\n    { \"product\": \"<productId>\", \"quantity\": 2 }\n  ]\n}"},"url": {"raw": "http://localhost:5000/api/carts/<cartId>","host": ["http://localhost:5000"],"path": ["api","carts","<cartId>"]}}},
    {"name": "Delete Cart","request": {"method": "DELETE","header": [{"key": "Authorization", "value": "Bearer <user_token>"}],"url": {"raw": "http://localhost:5000/api/carts/<cartId>","host": ["http://localhost:5000"],"path": ["api","carts","<cartId>"]}}},
    {"name": "Add Item To Cart","request": {"method": "POST","header": [{"key": "Content-Type", "value": "application/json"},{"key": "Authorization", "value": "Bearer <user_token>"}],"body": {"mode": "raw","raw": "{\n  \"product\": \"<productId>\",\n  \"quantity\": 1\n}"},"url": {"raw": "http://localhost:5000/api/carts/<cartId>/items","host": ["http://localhost:5000"],"path": ["api","carts","<cartId>","items"]}}},
    {"name": "Remove Item From Cart","request": {"method": "DELETE","header": [{"key": "Authorization", "value": "Bearer <user_token>"}],"url": {"raw": "http://localhost:5000/api/carts/<cartId>/items/<productId>","host": ["http://localhost:5000"],"path": ["api","carts","<cartId>","items","<productId>"]}}}
  ]
}
