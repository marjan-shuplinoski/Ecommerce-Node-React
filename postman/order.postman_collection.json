    {"name": "Delete Order","request": {"method": "DELETE","header": [{"key": "Authorization", "value": "Bearer <admin_token>"}],"url": {"raw": "http://localhost:5000/api/orders/<orderId>","host": ["http://localhost:5000"],"path": ["api","orders","<orderId>"]}}}
